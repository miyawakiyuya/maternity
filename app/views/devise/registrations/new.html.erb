<div class="form-wrapper">
  <h2>新規登録</h2>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <div class="message">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <form>
    <div class="form-item">
      <%= f.label :email,"メールアドレス" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form" %>
    </div>
    <div class="form-item">
      <%= f.label :name,"ニックネーム" %><br />
      <%= f.text_field :name, autofocus: true,class:"form" %>
    </div>
    <div class="form-item">
      <%= f.label :date,"出産予定日" %><br />
      <%= f.date_field :date, autofocus: true,class:"form" %>
    </div>
    <div class="form-item">
      <%= f.label :password,"パスワード" %><br/>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"form" %>
    </div>
    <div class="form-item">
      <%= f.label :password_confirmation,"パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form" %>
    </div>
    <div class="button-panel">
      <%= f.submit "新規登録",class:"form-btn" %>
    </div>
  </form>
  <% end %>
</div>











