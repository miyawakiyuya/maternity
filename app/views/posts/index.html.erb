<%= link_to '投稿', new_post_path,class:"btn btn-success" %>
<% @posts. each do |post|%>
<div>
  <p>タイトル<%= link_to post_path(post.id) do %>
  <%= post.title %>
  <% end %>
  </p>
  <p>内容<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>

<%= link_to '日記をかく', new_post_path %>



<%= paginate @posts %>
